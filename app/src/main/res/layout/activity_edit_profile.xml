<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:layout_margin="10dp">


    <ImageView
        android:id="@+id/ivProfileImageEdit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/ivProfileImageEdit"
        android:background="@color/gray"
        tools:text="username" />

    <EditText
        android:id="@+id/etShortBio"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tvUsername"
        android:layout_toEndOf="@+id/ivProfileImageEdit"
        android:background="@color/gray"
        tools:text="This is the short bio section" />

    <EditText
        android:id="@+id/etLongBio"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfileImageEdit"
        android:layout_alignParentStart="true"
        android:background="@color/gray"
        tools:text="The long bio section goes here" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLongBio"
        android:layout_alignLeft="@id/etLongBio"
        android:layout_marginTop="20dp"
        android:text="Save" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLongBio"
        android:layout_alignRight="@id/etLongBio"
        android:layout_marginTop="20dp"
        android:text="Cancel" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_navigation" />
</RelativeLayout>